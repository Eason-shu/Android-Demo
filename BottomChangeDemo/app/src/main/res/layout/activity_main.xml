<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="基本信息"
            />




        <com.shu.DropDownMenu
            android:layout_marginTop="38dp"
            android:layout_marginBottom="150dp"
            android:id="@+id/menu_warehouse"
            android:layout_width="234dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_go"
            app:textGravity="center"
            app:textColor="#ff333333"
            app:menuTextSize="14sp"
            app:placeholder="请选择盘点仓库"
            app:popupWidth="234dp"
            app:menuIcon="@drawable/xl"
            app:showMenuItemCount="4"/>
    </LinearLayout>






</LinearLayout>